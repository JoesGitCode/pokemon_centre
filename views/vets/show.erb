<h1><%=@vet.name%>'s Pokemon</h1>

<div class="vets-wrapper">
<%pokemon_array = @vet.show_pokemons %>
<% pokemon_array.each do |pokemon| pokemon%>
  <div class="vets-pokemon">
    Name: <%= pokemon['name'] %>
    <a href="/pokemon/<%=pokemon['id']%>">More Information</a>

    <a href="/pokemon/<%=pokemon['id']%>/heal">Heal</a>
  </div>
  <% end %>

</div>
