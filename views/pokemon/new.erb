<h1>Add a pokemon</h1>

<div class="form-container">
  <form method="POST" action="/pokemon">

    <div class="form-item">
      <label for="name">Name</label>
      <input type="text" name="name" id="name">
    </div>

    <div class="form-item">
      <label for="type">Type</label>
      <input type="text" name="type" id="type">
    </div>

    <div class="form-item">
      <label for="date_caught">Date Caught</label>
      <input type="number" name="da" id="date_caught">
    </div>

    <div class="form-item">
      <label for="treatment_notes">Treatment Notes</label>
      <input type="message" name="treatment_notes" id="treatment_notes">
    </div>

    <div class="form-item">
      <input type="submit" value="Add Pokemon">
    </div>

  </form>
</div>
