<h1><%=@pokemon.name%>'s Information</h1>



<div class="index-container">
  <div class="index-items">
    Name: <%= @pokemon.name %>
  </div>

  <div class="index-items">
    Type: <%= @pokemon.type %>
  </div>

  <div class="index-items">
    Date Caught: <%= @pokemon.date_caught %>
  </div>

  <div class="index-items">
    Treatment Notes: <%= @pokemon.treatment_notes %>
  </div>

  <div class="index-items">
    Assigned to: <a href="/vets/<%=@pokemon.vet.id%>"><%= @pokemon.vet.name %></a>
  </div>

  <a href="/pokemon/<%=@pokemon.id%>/edit">Edit</a>
  <form action="/pokemon/<%= @pokemon.id %>/delete" method="POST"><input type="submit" value="Delete"></form>


</div>
