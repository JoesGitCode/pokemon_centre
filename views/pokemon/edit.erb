<h1>Edit a pokemon</h1>

<div class="form-container">
  <form method="POST" action="/pokemon/<%=@pokemon.id%>">

    <div class="form-item">
      <label for="name">Name</label>
      <input type="text" name="name" id="name" value="<%=@pokemon.name %>">
    </div>

    <div class="form-item">
      <label for="type">Type</label>
      <input type="text" name="type" id="type" value="<%=@pokemon.type %>">
    </div>

    <div class="form-item">
      <label for="date_caught">Date Caught</label>
      <input type="number" name="da" id="date_caught" value="<%=@pokemon.date_caught %>">
    </div>

    <div class="form-item">
      <label for="treatment_notes">Treatment Notes</label>
      <input type="textarea" rows="8" cols="80" name="treatment_notes" id="treatment_notes" value="<%=@pokemon.treatment_notes %>">
    </div>

    <div class="form-item">
      <label for="vet">Assign to</label>
      <select class="vet-select" name="vet_id" id="vet">
        <% @vets.each do |vet| %>
          <% if vet.id == @pokemon.vet_id %>
            <option value=<%= vet.id %> selected><%= vet.name.capitalize %></option>
          <% else %>
            <option value=<%= vet.id %>><%= vet.name.capitalize %></option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div class="form-item">
      <label for="reset"></label>
      <input type="reset" name="reset" id="reset">
    </div>

    <div class="form-item">
      <input type="submit" value="Add Pokemon">
    </div>

  </form>
</div>
